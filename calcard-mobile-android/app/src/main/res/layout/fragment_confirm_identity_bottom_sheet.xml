<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.visa.ConfirmIdentityBottomSheet">

    <TextView
        android:id="@+id/confirm_identity_fragment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins"
        android:text="@string/confirm_identity_text"
        android:textAlignment="center"
        android:textSize="19sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirm_identity_fragment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins"
        android:text="Nome:"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_identity_fragment_text"
        app:layout_goneMarginTop="15dp" />

    <TextView
        android:id="@+id/confirm_identity_fragment_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins"
        android:text="Antônio"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/confirm_identity_fragment_name"
        app:layout_constraintTop_toBottomOf="@+id/confirm_identity_fragment_text"
        app:layout_goneMarginTop="15dp" />

    <TextView
        android:id="@+id/confirm_identity_fragment_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins"
        android:text="Telefone:"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_identity_fragment_name"
        app:layout_goneMarginTop="15dp" />

    <TextView
        android:id="@+id/confirm_identity_fragment_phone_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="55dp"
        android:fontFamily="@font/poppins"
        android:text="(51) 99422-3871"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/confirm_identity_fragment_phone"
        app:layout_constraintTop_toBottomOf="@+id/confirm_identity_fragment_name"
        app:layout_goneMarginTop="15dp" />


    <Button
        android:id="@+id/confirm_identity_fragment_decline_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_squared"
        android:fontFamily="@font/poppins"
        android:text="Não sou eu"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_identity_fragment_phone_value" />

    <Button
        android:id="@+id/confirm_identity_fragment_accept_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_orange"
        android:fontFamily="@font/poppins"
        android:text="Sim, sou eu"
        android:textAllCaps="false"
        android:textColor="@color/branco"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_identity_fragment_decline_button" />

</androidx.constraintlayout.widget.ConstraintLayout>