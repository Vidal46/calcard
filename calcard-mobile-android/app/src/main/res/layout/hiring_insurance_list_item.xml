<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hiring_insurance_list_item_bullet"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/insurance_item_bullet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hiring_insurance_list_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toEndOf="@+id/hiring_insurance_list_item_bullet"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Morte" />

    <TextView
        android:id="@+id/hiring_insurance_list_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/hiring_insurance_list_item_name"
        app:layout_constraintTop_toBottomOf="@+id/hiring_insurance_list_item_name"
        tools:text="Quitação do saldo devedor do cartão Calcard\n Visa na data do evento limitado a " />

</androidx.constraintlayout.widget.ConstraintLayout>