<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.insurance.AvailableInsurancesActivity">

    <LinearLayout
        android:id="@+id/available_insurance_linear"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/seguros_toolbar_text"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="23sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/available_insurance_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="@string/veja_nossos_planos_text"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/available_insurance_linear" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/available_insurance_title"
        tools:itemCount="1"
        tools:listitem="@layout/available_insurance_list_item" />


</androidx.constraintlayout.widget.ConstraintLayout>