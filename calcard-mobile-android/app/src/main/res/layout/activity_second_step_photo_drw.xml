<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.visa.SecondStepPhotoActivity">

        <TextView
            android:id="@+id/visa_second_step_photo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            android:fontFamily="@font/poppins"
            android:text="@string/foto_title"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/visa_second_step_photo_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_camera_frame"
            android:elevation="1dp" />

        <br.com.calcard.android.app.utils.AutoFitTextureView
            android:id="@+id/camera_texture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/visa_second_step_photo_button"
            app:layout_constraintTop_toBottomOf="@id/visa_second_step_photo_title" />

        <ImageView
            android:id="@+id/image_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="-30dp" />

        <FrameLayout
            android:id="@+id/camera_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp" />

        <ImageView
            android:id="@+id/visa_second_step_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:contentDescription="@string/bot_o_para_tirar_foto_label"
            android:elevation="1dp"
            android:src="@drawable/camera_button_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>